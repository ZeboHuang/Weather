<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="220dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/daily_trend_item_week_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="周一"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/daily_trend_item_month_text"
        app:layout_constraintStart_toStartOf="@+id/daily_trend_item_month_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/daily_trend_item_month_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="二月"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/daily_trend_item_day_text"
        app:layout_constraintStart_toStartOf="@+id/daily_trend_item_day_text"
        app:layout_constraintTop_toBottomOf="@+id/daily_trend_item_week_text" />

    <TextView
        android:id="@+id/daily_trend_item_day_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="day"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/daily_trend_item_icon_imageview"
        app:layout_constraintStart_toStartOf="@+id/daily_trend_item_icon_imageview"
        app:layout_constraintTop_toBottomOf="@+id/daily_trend_item_month_text" />

    <ImageView
        android:id="@+id/daily_trend_item_icon_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icons8_cloud_100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daily_trend_item_day_text" />

    <TextView
        android:id="@+id/daily_trend_item_max_temp_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="13°"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/daily_trend_item_icon_imageview"
        app:layout_constraintStart_toStartOf="@+id/daily_trend_item_icon_imageview"
        app:layout_constraintTop_toBottomOf="@+id/daily_trend_item_icon_imageview" />

    <TextView
        android:id="@+id/daily_trend_item_min_temp_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5°"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/daily_trend_item_max_temp_text"
        app:layout_constraintStart_toStartOf="@+id/daily_trend_item_max_temp_text"
        app:layout_constraintTop_toBottomOf="@+id/daily_trend_item_max_temp_text" />

    <TextView
        android:id="@+id/daily_trend_item_skycon_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="多云"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/daily_trend_item_min_temp_text"
        app:layout_constraintStart_toStartOf="@+id/daily_trend_item_min_temp_text"
        app:layout_constraintTop_toBottomOf="@+id/daily_trend_item_min_temp_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
